{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src/**/*.ts", "src/EmptyMigration.js"],
  "references": [{ "path": "../../lib" }]
}
