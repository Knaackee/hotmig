{
  "name": "@hotmig/lib",
  "version": "0.1.0",
  "description": "Tool for Database Migrations.",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -b",
    "postbuild": "npm run docs",
    "dev": "tsc -w",
    "docs": "rimraf docs && typedoc src/index.ts --hideInPageTOC --hideBreadcrumbs --plugin typedoc-plugin-markdown --out docs",
    "test": "jest --passWithNoTests --runInBand",
    "test:watch": "jest --watchAll --verbose --passWithNoTests",
    "test:clear": "jest --clearCache"
  },
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/Knaackee/hotmig.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Knaackee/hotmig/issues"
  },
  "author": "Denis Knaack",
  "devDependencies": {
    "@hotmig/hotmig-driver-pg": "^0.1.0",
    "@types/invariant": "^2.2.35",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/pg": "^8.6.4",
    "clear-module": "^4.1.2",
    "cross-env": "^7.0.3",
    "invariant": "^2.2.4",
    "jest": "^27.4.7",
    "pg": "^8.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "knex": "^1.0.2",
    "slugify": "^1.6.5"
  }
